<section>
    <div class="container">
        <div class="col-md-6">
            <h2 class="text-center">Edit Product Details</h2>
            <form action="/admin/edit-products/?id={{product._id}}" method="POST" enctype="multipart/form-data">
                <label for="">Product</label>
                <input type="text" name="Product" class="form-control" value="{{product.Product}}" placeholder="Product">
                <label for="">Category</label>
                <input type="text" name="Category" class="form-control" value="{{product.Category}}" placeholder="Category">
                <label for="">Price</label>
                <input type="text" name="Price" class="form-control" value="{{product.Price}}" placeholder="Price">
                <label for="">Description</label>
                <input type="text" name="Description" class="form-control" value="{{product.Description}}" placeholder="Description">
                <label for="">Image</label>
                <img style="width:4rem; height:5rem" src="/product-images/{{product._id}}.jpg" id="imgView"  alt="" srcset="">
                <input type="file" name="Image" class="form-control" value="" onchange="viewImage(event)" >
                <input type="submit" value="Update" class="mt-3 bg-success">

            </form>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }   
</script>