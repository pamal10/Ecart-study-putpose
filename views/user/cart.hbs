<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                </tr>

            </thead>
            <tbody>
                {{#each cartItems}}
                <tr>
                    {{#each this.products}}
                    <td><img style="width:10rem;height:auto ;" src="/product-images/{{this._id}}.jpg" alt="" srcset=""></td>
                    <td>{{this.Product}}</td>
                    {{/each}}
                    <td>
                        <button class="cart-item-count mr-3 bg-warning">-</button> {{this.quantity}} <button class="bg-warning mr-3 cart-item-count">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>